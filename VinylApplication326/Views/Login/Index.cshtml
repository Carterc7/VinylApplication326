@model VinylApplication326.Models.UserModel

@{
    ViewData["Title"] = "LoginForm";
}

<h1 class="text-center mb-4">Login</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <form asp-action="ProcessLogin" class="p-4 border rounded shadow-sm">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <div class="mb-3">
                <label asp-for="UserName" class="form-label">Username</label>
                <input asp-for="UserName" class="form-control" placeholder="Enter your username" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="d-grid">
                <input type="submit" value="Login" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" asp-controller="Register" class="text-decoration-none">Create an account?</a>
</div>

